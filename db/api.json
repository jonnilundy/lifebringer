[
	{
		"path": "/players/*",
		"method": ["GET"],
		"data": true
	},
	{
		"path": "/players/*",
		"method": ["DELETE"],
		"auth": {
			"validator": "$auth.email === jonathan.lundy@liferay.com"
		},
		"data": true
	},
	{
		"path": "/players/*",
		"method": ["POST"],
		"auth": {
			"validator": "$auth !== null"
		},
		"data": true 
	},
	{
		"path": "/players/*",
		"method": ["PATCH", "PUT"],
		"auth": {
			"validator": "$auth.email == $data.document().child('email')"
		},
		"data": true 
	}
]